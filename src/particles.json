{

  "background": {
    "color": "#121212"
  },
  "fullScreen":{
    "enable" : true,
    "zIndex" : 0
  },
  "interactivity": {
    "events": {
      "onClick": {
        "enable": true,
        "mode": "push"
      },
      "onHover": {
        "enable": true,
        "mode": "repulse"
      },
      "resize": true
    }, 
    "modes": {
      "push": {
        "quantity": 5
      }, 
      "repulse": {
        "radius": 300
      }
    }
  },
  "particles": {
    "links": {
      "enable": true,
      "distance": 150
    },
    "move": {
      "enable": true,
      "speed": {"min": 1, "max": 5}
    },
    "opacity": {
      "value": {"min": 0.01, "max": 0.1}
    },
    "size": {
      "value": {"min": 1, "max": 3}
    }
  }
}
